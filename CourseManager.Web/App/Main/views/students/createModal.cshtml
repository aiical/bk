@using Abp.Authorization.Users
<div>
    <form name="userCreateForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>@L("AddStu")</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>@L("CnName")</label>
                <input class="form-control" type="text" name="CnName" ng-model="vm.user.userName" required maxlength="@AbpUserBase.MaxUserNameLength">

                
            </div>

            <div class="form-group">
                <label>@L("EnName")</label>
                <input type="text" name="EnName" class="form-control" ng-model="vm.user.name" required maxlength="@CourseManager.Users.User.MaxNameLength">
            </div>

            <div class="form-group">
                <label>@L("LocalCountryName")</label>
                <input type="text" name="LocalCountryName" class="form-control" ng-model="vm.user.surname" required maxlength="@CourseManager.Users.User.MaxSurnameLength">
            </div>

            <div class="form-group">
                <label>@L("Mobile")</label>
                <input type="number" name="Mobile" class="form-control" ng-model="vm.user.emailAddress" required maxlength="@CourseManager.Users.User.MaxEmailAddressLength">
            </div>

            <div class="form-group">
                <label>@L("Position")</label>
                <input type="text" name="Position" class="form-control" ng-model="vm.user.password" maxlength="@CourseManager.Users.User.MaxPlainPasswordLength">
            </div>
            <div class="form-group">
                <label>@L("CountryName")</label>
                <input type="text" name="CountryName" class="form-control" ng-model="vm.user.password" maxlength="@CourseManager.Users.User.MaxPlainPasswordLength">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="IsActive" ng-model="vm.user.isActive" value="true"> @L("IsActive")
                </label>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="userCreateForm.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        </div>
    </form>
</div>