@using Abp.Authorization.Users
<div>
    <form name="signInRecordCreateForm" role="form"  class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>@L("SignIn")</span> @*上课签到*@
            </h4>
        </div>
        <div class="modal-body">

            <div class="form-group">
                <label>@L("Address")</label>
                <input class="form-control" type="text" name="Address" ng-model="vm.signInRecord.address" required>
            </div>

            <div class="form-group">
                <label>@L("Students")</label>
                <input type="text" name="StudentId" class="form-control" ng-model="vm.signInRecord.studentId" required>
            </div>


            <div class="form-group">
                <div class="col-md-6">
                    <label>@L("BeginTime")</label>
                    <input type="text" name="BeginTime" class="form-control" ng-model="vm.signInRecord.beginTime" required>
                </div>

                <div class="col-md-6">
                    <label>@L("EndTime")</label>
                    <input type="text" name="EndTime" class="form-control" ng-model="vm.signInRecord.endTime" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label>@L("CourseType")</label>
                    <select class="form-control" ng-model="selectedCourseType" ng-options="option.CategoryName for option in  vm.signInRecord.courseType"></select>
                </div>
                <div class="col-md-6">
                    <label>@L("ClassType")</label>
                    <select class="form-control" ng-model="selectedClassType" ng-options="option.CategoryName for option in  vm.signInRecord.classType"></select>
                </div>
            </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label>@L("Type")</label>
                        <select class="form-control" ng-model="selectedType" ng-options="option.CategoryName for option in  vm.signInRecord.type"></select>
                        @*<span>你选择的值是: {{selectedType}}</span>*@
                    </div>
                    <div class="col-md-6">
                        <label>@L("UnNormalType")</label>
                        <select class="form-control" ng-model="selectedUnNormalType" ng-options="option.CategoryName for option in  vm.signInRecord.unNormalType"></select>
                        @* <select>
                数组：<option ng-model="selectedUnNormalType" ng-repeat="x in vm.signInRecord.unNormalType">{{x}}</option>
                                </select>*@
                    </div>
                </div>

                <div class="form-group">
                    <label>@L("Reason"):</label>
                    <input class="form-control" type="text" name="Reason" ng-model="vm.signInRecord.reason">
                </div>
            </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="signInRecordCreateForm.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        </div>
    </form>
</div>