@{
    ViewBag.Title = @L("Add");
}
<div class="modal fade" id="addTeacherCourseArrangeModal" tabindex="-1" role="dialog" aria-labelledby="createTask" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">@L("ArrangeCourse")</h4>
            </div>
            <div class="modal-body" id="modalContent">
                @using (Ajax.BeginForm("AddTeacherCourseArrange", "CourseArrange", new AjaxOptions()
                {
                    OnBegin = "Bk.TeacherCourseArrange.actions.beginPost('#addTeacherCourseArrangeModal')",
                    OnSuccess = "Bk.TeacherCourseArrange.actions.hideForm('#addTeacherCourseArrangeModal')"
                }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-6">
                                <label>@L("Teachers")</label>
                                <input type="hidden" value="" name="TeacherId" />
                                <input class="form-control form-inline" placeholder="请输入准确完整的教师名" type="text" name="CnName" />
                            </div>
                            <div class="col-md-6">
                                <label>@L("ClassType")</label>
                                @Html.DropDownList("ClassTypeList", ViewBag.ClassType as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                @*<input type="text" name="ClassType" class="form-control form-inline" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label>@L("Students")</label>
                                <input type="hidden" value="" name="StudentId" />
                                <input class="form-control form-inline" placeholder="请输入准确完整的学生中文名" type="text" name="Student" />
                            </div>
                            <div class="col-md-6">
                                <label>@L("CourseType")</label>
                                @*<input type="text" name="ClassType"  class="form-control form-inline" />*@
                                @Html.DropDownList("CourseType", ViewBag.ClassType as IEnumerable<SelectListItem>, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6">
                                <label>@L("BeginTime")</label>

                                <input class="form-control form-inline datetime" type="text" name="Student" />
                            </div>

                            <div class="col-md-6">
                                <label>@L("EndTime")</label>

                                <input class="form-control form-inline datetime"  type="text" name="Student" />
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>@L("Remark")</label>
                                <input class="form-control form-inline" type="text" name="Remark" />
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @*<button type="button" class="btn btn-default cancel">@L("Cancel")</button>*@
                                <button type="submit" class="btn btn-primary blue">@L("Save")</button>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>