
@{
    ViewBag.Title = L("TeacherClassHourStatistics");
}
@section Styles{
    <link href="~/Assets/libsReference/jquery.datetimepicker/jquery.datetimepicker.css" rel="stylesheet" />
}
<div id="container">
    <form id="queryForm">
        <div class="form-inline" style="margin:80px 20%;">
            <div class="form-group">
                <label class="" for="">老师姓名：</label>
                <input type="text" name="TeacherName" placeholder="中/英（中文相同请用英文）" class="form-control" id="TeacherName">
            </div>
            <div class="form-group">
                @*页面首次加载的时候获取当月开始到当前时间的所有课时*@
                <label class="" for="">开始时间：</label>
                <input type="text" class="form-control datetime" value="2017-06-01" name="BeginTime" id="BeginTime">
            </div>
            <div class="form-group">
                <label class="" for="">结束时间：</label>
                <input type="text" class="form-control datetime" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="EndTime" id="EndTime">
            </div>
            <input type="button" id="btnSearch" class="btn btn-primary" value="搜索">
        </div>
    </form>
    <div id="chart-show">


    </div>

</div>
@section Scripts{
    <script src="~/Assets/libsReference/jquery.datetimepicker/jquery.datetimepicker.js"></script>
    <script src="https://img.hcharts.cn/highcharts/modules/exporting.js"></script>
    <script src="https://img.hcharts.cn/highcharts-plugins/highcharts-zh_CN.js"></script>
    <script src="~/Assets/js/dateTimeUtil.js"></script>
    <script src="~/Views/ClassHourStatistics/ClassHourStatistics.js"></script>

    <script type="text/javascript">
        $(function () {
            Bk.ClassHourStatistics.bootstrap();
        })
    </script>
}
